<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/red_envelope_layout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_redenvelope_margin1"
        android:layout_marginRight="@dimen/dialog_redenvelope_margin1"
        android:layout_marginTop="@dimen/dialog_redenvelope_margin2">

        <ImageView
            android:id="@+id/iv_scan_wx_avatar_icon"
            android:layout_width="@dimen/dialog_redenvelope_width1"
            android:layout_height="@dimen/dialog_redenvelope_height1"
            android:layout_centerVertical="true"
            android:src="@mipmap/wxavatar"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_scan_wx_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="三毛"
            android:maxLength="10"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_scan_wx_avatar_icon"
            android:layout_marginLeft="@dimen/dialog_redenvelope_margin3"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dialog_redenvelope_textsize1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发了一个电视红包"
            android:layout_toRightOf="@id/tv_scan_wx_nickname"
            android:layout_marginLeft="@dimen/dialog_redenvelope_margin3"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dialog_redenvelope_textsize1"/>
        <TextView
            android:id="@+id/tv_scan_wx_countdown"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="70"
            android:gravity="center"
            android:textSize="@dimen/dialog_redenvelope_textsize1"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_width="@dimen/dialog_redenvelope_width2"
            android:layout_height="@dimen/dialog_redenvelope_height2"
            android:background="@drawable/bg_shape_white_line"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/red_envelope_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_redenvelope_margin5"
        android:lines="1"
        android:text="红包来啦"
        android:typeface="serif"
        android:textColor="#f6edc4"
        android:textSize="@dimen/dialog_redenvelope_textsize2" />

    <ImageView
        android:id="@+id/iv_scan_qrcode"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_redenvelope_margin4"
        android:layout_marginBottom="@dimen/dialog_redenvelope_margin2"
        android:background="@color/color_white"
        android:layout_width="@dimen/dialog_redenvelope_img_side1"
        android:layout_height="@dimen/dialog_redenvelope_img_side1" />
    <TextView
        android:id="@+id/red_envelope_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:visibility="visible"
        android:text="靓照上电视 大屏分享更快乐"
        android:typeface="serif"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/dialog_redenvelope_margin2"
        android:textColor="#f6edc4"
        android:textSize="@dimen/dialog_redenvelope_textsize3"/>
</LinearLayout>