<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/translucent">


    <LinearLayout
        android:id="@+id/projection_personnel_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/projection_wxhead"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/wxavatar" />

        <TextView
            android:id="@+id/projection_wxnickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Pony"
            android:textColor="@color/color_white"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5sp"
        android:background="@color/color_dark" />

    <LinearLayout
        android:id="@+id/projection_img_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<include layout="@layout/item_projection_img"/>
        <include layout="@layout/item_projection_img"/>
        <include layout="@layout/item_projection_img"/>-->
    </LinearLayout>
</LinearLayout>