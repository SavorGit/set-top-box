<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ads_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.savor.ads.activity.AdsPlayerActivity">
    <com.savor.ads.customview.SavorVideoView
        android:id="@+id/video_view"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--餐厅抽奖活动头部布局-->
    <FrameLayout
        android:id="@+id/partake_dish_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bwc_countdown"/>
        <TextView
            android:id="@+id/pd_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:23"
            android:textSize="45dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="25dp"
            android:textColor="#f14040"/>
        <com.savor.ads.customview.StrokeTextView
            android:id="@+id/pd_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="9"
            android:text="测试活动测试"
            android:textSize="45dp"
            android:layout_gravity="start"
            android:lines="1"
            android:layout_marginLeft="40dp"
            android:textColor="@color/color_black"/>
    </FrameLayout>
    <!--微信头像昵称布局-->
    <LinearLayout
        android:id="@+id/wx_projection_tip_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wx_projection_icon_tip"
            android:src="@mipmap/wxavatar"
            android:layout_gravity="center_vertical"
            android:layout_width="37dp"
            android:layout_height="37dp" />
        <TextView
            android:id="@+id/wx_projection_nickname_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_white"
            android:textSize="37dp"/>
    </LinearLayout>
    <!--小热点餐厅活动头部-->
    <RelativeLayout
        android:id="@+id/goods_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@color/translucent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小热点-餐厅活动"
            android:layout_alignParentBottom="true"
            android:paddingLeft="40dp"
            android:textColor="@color/color_white"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/goods_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15s"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:textColor="@color/color_white"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <!--商品价格布局-->
    <RelativeLayout
        android:id="@+id/price_layout"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:background="@mipmap/price_bg">

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/color_white"
            android:textSize="40dp"
            android:visibility="visible"/>

    </RelativeLayout>
    <!--本店有售布局-->
    <RelativeLayout
        android:id="@+id/store_sale_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/store_sale"/>
    </RelativeLayout>
</RelativeLayout>
