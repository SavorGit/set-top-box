<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen_projection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.savor.ads.activity.ScreenProjectionActivity">

    <com.savor.ads.customview.ProjectVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <ImageView
            android:id="@+id/welcome_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/image_gif_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:id="@+id/waiter_welcome_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_projection_margin1"
            android:background="@mipmap/waiter_bg"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_projection_margin2"
                android:background="@drawable/bg_shape_welcome_head">
                <ImageView
                    android:id="@+id/waiter_icon_welcome_tip"
                    android:src="@mipmap/wxavatar"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/activity_projection_img_side7"
                    android:layout_height="@dimen/activity_projection_img_side7" />
            </RelativeLayout>

            <TextView
                android:id="@+id/waiter_name_welcome_tip"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘斌为您服务"
                android:layout_marginLeft="@dimen/activity_projection_padding1"
                android:textColor="@color/color_white"
                android:textSize="@dimen/activity_projection_img_side1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/waiter_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_projection_img_side6"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_shape_head">
                <ImageView
                    android:id="@+id/waiter_icon_tip"
                    android:src="@mipmap/wxavatar"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/activity_projection_img_side9"
                    android:layout_height="@dimen/activity_projection_img_side9" />
            </RelativeLayout>

            <TextView
                android:id="@+id/waiter_name_tip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老六"
                android:layout_marginTop="@dimen/activity_projection_padding1"
                android:textColor="#EC7A76"
                android:textSize="@dimen/activity_projection_img_side1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/project_words"
            android:textSize="@dimen/activity_projection_textsize4"
            android:textColor="@color/color_light"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_projection_textsize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/welcome_words"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_projection_margin7"
            android:paddingRight="@dimen/activity_projection_margin7"
            android:gravity="center"
            android:shadowRadius="1"
            android:shadowDx="5"
            android:shadowDy="5"
            />
        <RelativeLayout
            android:id="@+id/rl_loading_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <!--<ProgressBar
                android:id="@+id/pb_image"
                style="?android:progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"/>-->

            <com.savor.ads.customview.CircleProgressBar
                android:id="@+id/pb_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                app:backgroundColor="#33ffffff"
                app:fillColor="#ffffff"
                app:indeterminate="true"
                app:indeterminateDuration="1000"
                app:strokeWidth="16dp"/>

            <TextView
                android:id="@+id/tv_loading_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pb_image"
                android:layout_centerHorizontal="true"
                android:text="图片加载中..."
                android:textColor="@android:color/white"
                android:textSize="26sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_images"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_project_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/activity_projection_margin1"
        android:background="@drawable/bg_round_translucence"
        android:padding="@dimen/activity_projection_padding1"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/activity_projection_textsize1"/>
    <LinearLayout
        android:id="@+id/wx_projection_tip_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wx_projection_icon_tip"
            android:src="@mipmap/wxavatar"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/activity_projection_img_side1"
            android:layout_height="@dimen/activity_projection_img_side1" />
        <TextView
            android:id="@+id/wx_projection_txt_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客"
            android:layout_marginTop="@dimen/activity_projection_margin1"
            android:layout_marginRight="@dimen/activity_projection_margin1"
            android:layout_marginBottom="@dimen/activity_projection_margin1"
            android:layout_marginLeft="@dimen/activity_projection_padding1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/activity_projection_img_side1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_project_countdow_tip"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/activity_projection_margin2"
        android:gravity="center"
        android:textSize="@dimen/activity_projection_textsize2"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:layout_width="@dimen/activity_projection_img_side2"
        android:layout_height="@dimen/activity_projection_img_side2"
        android:background="@drawable/bg_shape_white_line"/>
    <ImageView
        android:id="@+id/iv_mute"
        android:layout_width="@dimen/activity_projection_img_side3"
        android:layout_height="@dimen/activity_projection_img_side3"
        android:layout_marginLeft="@dimen/activity_projection_margin1"
        android:layout_marginTop="@dimen/activity_projection_margin1"
        android:src="@mipmap/ic_mute"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_volume_view"
        android:layout_width="@dimen/activity_projection_width1"
        android:layout_height="@dimen/activity_projection_height1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/bg_volume_big"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_projection_textsize2"
            android:layout_centerVertical="true"
            android:background="@mipmap/bg_volume_center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_projection_margin1"
            android:paddingRight="@dimen/activity_projection_padding1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_volume_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="音量"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_projection_margin3"
                    android:text="50"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pb_volume"
                style="@style/VolumeProgressBarStyle"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/price_layout"
        android:layout_width="@dimen/activity_projection_img_side4"
        android:layout_height="@dimen/activity_projection_img_side4"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_projection_margin1"
        android:layout_marginBottom="@dimen/activity_projection_margin1"
        android:visibility="gone"
        android:background="@mipmap/price_bg">
        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_projection_margin4"
            android:textColor="@color/color_white"
            android:textSize="@dimen/activity_projection_textsize2"
            android:visibility="visible"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/store_sale_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_projection_margin2"
        android:layout_marginRight="@dimen/activity_projection_margin5"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/activity_projection_img_side5"
            android:layout_height="@dimen/activity_projection_img_side5"
            android:src="@mipmap/store_sale"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_share_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/user_share_tip"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享 | 热点投屏精选"
            android:layout_marginLeft="@dimen/activity_projection_margin4"
            android:layout_marginTop="@dimen/activity_projection_margin2"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:textSize="@dimen/activity_projection_margin2"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/projection_qrcode_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_projection_margin2"
        android:layout_marginBottom="@dimen/activity_projection_margin1"
        android:visibility="gone"
        android:background="@mipmap/bg_qrcode"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mini_program_tip9"
            android:textColor="#e61f18"
            android:textSize="@dimen/activity_projection_textsize3"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_projection_margin6"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/projection_qrcode"
                android:layout_width="@dimen/activity_projection_img_side6"
                android:layout_height="@dimen/activity_projection_img_side6"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
    <!--大屏右侧展示是否本店有售和显示价格浮层-->
    <include layout="@layout/layout_wine_sell"/>
</RelativeLayout>
