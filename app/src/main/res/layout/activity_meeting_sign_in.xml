<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meeting_sign_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/meeting_bg">
    <TextView
        android:id="@+id/tv_meeting_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热点信息技术有限公司"
        android:textSize="30dp"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/color_white"/>
    <GridView
        android:id="@+id/gv_sign_in_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:horizontalSpacing="10dp"
        android:numColumns="10"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:scrollbars="none"
        android:verticalSpacing="20dp" />
    <TextView
        android:id="@+id/tv_sign_in_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_white"
        android:textSize="40dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/sign_in_qrcode_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_qrcode"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/meeting_countdown_tip1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF4444"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="1.5dp"
                    android:textColor="#F9F94B"
                    android:letterSpacing="0.2"
                    android:text="@string/mini_program_tip8"
                    android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/meeting_countdown_tip2"
                android:layout_below="@id/meeting_countdown_tip1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_sign_in_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="1.5dp"
                    android:textColor="#E61A42"
                    android:text="00"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_qrcode_sign_in"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:layout_gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>