<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/lottery_bg">
    <LinearLayout
        android:id="@+id/lucky_user_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bg_round_white_translucent"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸运用户"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/color_red"/>
        <LinearLayout
            android:id="@+id/lucky_user_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_horizontal"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:overScrollMode="never"
        android:layout_marginRight="180dp"
        android:layout_marginLeft="180dp"
        android:scrollbars="none"
        android:layout_centerInParent="true"/>
    <!--//////////////////////////////////////-->
    <RelativeLayout
        android:id="@+id/lottery_person_layout"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_white">

            <ImageView
                android:id="@+id/lottery_person_img"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:src="@mipmap/xiaolian_redian" />
        </RelativeLayout>
        <TextView
            android:id="@+id/lottery_personname"
            android:text="真奥术大师多"
            android:textSize="30dp"
            android:gravity="center"
            android:lines="1"
            android:layout_marginTop="210dp"
            android:background="@color/translucent"
            android:textColor="@color/color_white"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!--字体描边加粗-->
    <com.savor.ads.customview.StrokeTextView
        android:id="@+id/lottery_desc"
        android:visibility="gone"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lottery_person_layout"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/crown"
        android:src="@mipmap/crown"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--//////////////////////////////////////-->
    <com.savor.ads.customview.StrokeTextView
        android:id="@+id/lottery_tip"
        android:visibility="gone"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>