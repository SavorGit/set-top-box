<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="142dp"
        android:layout_marginRight="142dp">

        <ImageView
            android:id="@+id/prize_img"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:padding="2dp"
            android:src="@mipmap/xiaolian_redian" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/prize_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prize_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="一等奖"
                android:textColor="@color/color_dark"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/prize_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="赖茅酒一瓶500ML"
                android:textColor="@color/color_dark"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lucky_user_all_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prize_img"
            android:layout_marginLeft="360dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:visibility="gone"
        android:background="#FFCCFF"/>
</LinearLayout>