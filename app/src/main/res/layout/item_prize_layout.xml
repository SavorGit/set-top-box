<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_prize_margin1"
        android:layout_marginRight="@dimen/item_prize_margin1">

        <ImageView
            android:id="@+id/prize_img"
            android:layout_width="@dimen/item_prize_side1"
            android:layout_height="@dimen/item_prize_side1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_prize_margin2"
            android:padding="@dimen/item_prize_padding1"
            android:src="@mipmap/xiaolian_redian" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_prize_margin3"
            android:layout_toRightOf="@id/prize_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prize_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="一等奖"
                android:textColor="@color/color_dark"
                android:textSize="@dimen/item_prize_textsize1" />

            <TextView
                android:id="@+id/prize_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/item_prize_margin4"
                android:text="赖茅酒一瓶500ML"
                android:textColor="@color/color_dark"
                android:textSize="@dimen/item_prize_textsize1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lucky_user_all_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prize_img"
            android:layout_marginLeft="@dimen/item_prize_margin5"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_prize_padding1"
        android:layout_marginLeft="@dimen/item_prize_side2"
        android:layout_marginRight="@dimen/item_prize_side2"
        android:visibility="gone"
        android:background="#FFCCFF"/>
</LinearLayout>