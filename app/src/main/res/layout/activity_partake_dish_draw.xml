<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bwc_draw_bg">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_horizontal"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_centerInParent="true"/>
    <!--//////////////////////////////////////-->
    <RelativeLayout
        android:id="@+id/lottery_person_layout"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_white">
            <ImageView
                android:id="@+id/lottery_person_img"
                android:padding="2dp"
                android:src="@mipmap/xiaolian_redian"
                android:layout_centerHorizontal="true"
                android:layout_width="250dp"
                android:layout_height="250dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/lottery_personname"
            android:text="真奥术大师多"
            android:textSize="30dp"
            android:gravity="center"
            android:lines="1"
            android:layout_marginTop="210dp"
            android:background="@color/translucent"
            android:textColor="@color/color_white"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!--字体描边加粗-->
    <com.savor.ads.customview.StrokeTextView
        android:id="@+id/lottery_desc"
        android:visibility="gone"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lottery_person_layout"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/crown"
        android:src="@mipmap/crown"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--//////////////////////////////////////-->

    <!--右下角中奖菜品信息布局-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@color/color_white">
            <ImageView
                android:id="@+id/lottery_img"
                android:padding="2dp"
                android:src="@mipmap/wxavatar"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="200dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/lottery_name"
            android:text="真奥术大师多"
            android:textSize="30dp"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:lines="1"
            android:background="@color/translucent"
            android:textColor="@color/color_white"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>